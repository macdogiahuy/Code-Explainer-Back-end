<Window x:Class="CodeExplainer.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:CodeExplainer.Desktop.ViewModels"
        xmlns:viewModelsChat="clr-namespace:CodeExplainer.Desktop.ViewModels.Chat"
        xmlns:viewModelsNotifications="clr-namespace:CodeExplainer.Desktop.ViewModels.Notifications"
        xmlns:viewModelsProfile="clr-namespace:CodeExplainer.Desktop.ViewModels.Profile"
        xmlns:viewsAuth="clr-namespace:CodeExplainer.Desktop.Views.Auth"
        xmlns:viewsChat="clr-namespace:CodeExplainer.Desktop.Views.Chat"
        xmlns:viewsNotifications="clr-namespace:CodeExplainer.Desktop.Views.Notifications"
        xmlns:viewsProfile="clr-namespace:CodeExplainer.Desktop.Views.Profile"
        mc:Ignorable="d"
        Title="Code Explainer"
        Width="1200"
        Height="800"
        MinWidth="1024"
        MinHeight="720"
        Background="{StaticResource SurfaceBackgroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate DataType="{x:Type viewModels:AuthViewModel}">
            <viewsAuth:AuthView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModelsChat:ChatViewModel}">
            <viewsChat:ChatView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModelsNotifications:NotificationsViewModel}">
            <viewsNotifications:NotificationsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModelsProfile:ProfileViewModel}">
            <viewsProfile:ProfileView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="2"
                Background="White"
                BorderBrush="{StaticResource SurfaceBorderBrush}"
                BorderThickness="0,0,1,0"
                Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="20" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="40" Height="40" Fill="{StaticResource BrandPrimaryBrush}" />
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Code Explainer" FontSize="16" FontWeight="SemiBold" />
                            <TextBlock Text="Desktop Client" Foreground="{StaticResource TextSecondaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" Margin="12,0">
                    <Button Content="Chat"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,8,0,0"
                            Command="{Binding NavigateChatCommand}" />
                    <Button Content="Thông báo"
                            Style="{StaticResource BadgeButtonStyle}"
                            Margin="0,8,0,0"
                            Tag="{Binding NotificationsViewModel.UnreadCount}"
                            Command="{Binding NavigateNotificationsCommand}" />
                    <Button Content="Hồ sơ"
                            Margin="0,8,0,0"
                            Command="{Binding NavigateProfileCommand}" />
                </StackPanel>

                <Button Grid.Row="2"
                    Content="Đăng xuất"
                    Margin="20"
                    Command="{Binding LogoutCommand}" />
            </Grid>
        </Border>

        <DockPanel Grid.Column="1" Grid.RowSpan="2">
            <Border Background="White"
                    BorderBrush="{StaticResource SurfaceBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="20"
                    Visibility="{Binding IsAuthenticated, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentUser.UserName}" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding CurrentUser.Email}" Foreground="{StaticResource TextSecondaryBrush}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="Transparent" Padding="24">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>

            <Control Style="{StaticResource LoadingSpinnerStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding CurrentViewModel.IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </DockPanel>
    </Grid>
</Window>
