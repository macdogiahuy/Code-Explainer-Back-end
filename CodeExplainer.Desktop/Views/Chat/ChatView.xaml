<UserControl x:Class="CodeExplainer.Desktop.Views.Chat.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Margin="0,0,20,0" Background="White" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="12">
            <DockPanel>
                <Border DockPanel.Dock="Top" Padding="16" Background="Transparent">
                    <StackPanel>
                        <TextBlock Text="Phiên làm việc" FontWeight="SemiBold" FontSize="16" />
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Tải lại" Command="{Binding LoadSessionsCommand}" />
                            <TextBlock Text="{Binding ConnectionStatus}" 
                                     Foreground="{Binding IsConnected, Converter={StaticResource BoolToBrushConverter}}"
                                     VerticalAlignment="Center"
                                     Margin="12,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <ListBox ItemsSource="{Binding Sessions}" 
                         SelectedItem="{Binding SelectedSession}" 
                         BorderThickness="0" 
                         Margin="0,0,0,16"
                         IsEnabled="{Binding IsConnected}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="12" Padding="12" Background="#F5F7FA" CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding UpdatedAt, StringFormat=dd/MM/yyyy HH:mm}" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondaryBrush}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="White"
                    Padding="16"
                    BorderBrush="{StaticResource SurfaceBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Nhập code để phân tích" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ngôn ngữ" FontWeight="SemiBold" />
                            <ComboBox SelectedValue="{Binding Language}"
                                    SelectedValuePath="Tag"
                                    Margin="0,8,0,0"
                                    IsEnabled="{Binding IsConnected}">
                                <ComboBoxItem Content="C#" Tag="csharp" />
                                <ComboBoxItem Content="Java" Tag="java" />
                                <ComboBoxItem Content="Python" Tag="python" />
                                <ComboBoxItem Content="JavaScript" Tag="javascript" />
                                <ComboBoxItem Content="TypeScript" Tag="typescript" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="16,0,0,0">
                            <TextBlock Text="Đoạn mã" FontWeight="SemiBold" />
                            <TextBox Text="{Binding SourceCode, UpdateSourceTrigger=PropertyChanged}"
                                    AcceptsReturn="True"
                                    Height="300"
                                    TextWrapping="Wrap"
                                    FontFamily="Consolas"
                                    Margin="0,8,0,0"
                                    IsEnabled="{Binding IsConnected}" />
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="{Binding Error}"
                              Foreground="Red"
                              TextWrapping="Wrap"
                              Margin="0,12,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Giải thích code"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ExplainCodeCommand}"
                                Margin="0,0,12,0"
                                IsEnabled="{Binding IsConnected}" />
                        <Button Content="Phân tích lỗi"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding AnalyzeErrorsCommand}"
                                Margin="0,0,12,0"
                                IsEnabled="{Binding IsConnected}" />
                        <Button Content="Tối ưu code"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding OptimizeCodeCommand}"
                                IsEnabled="{Binding IsConnected}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="{StaticResource SurfaceBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Kết quả phân tích"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="16,16,16,12" />
                    <TextBlock DockPanel.Dock="Top"
                               Text="{Binding SystemMessage}"
                               Margin="16,0,16,12"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource BrandAccentBrush}"
                               Visibility="{Binding SystemMessage, Converter={StaticResource StringToVisibilityConverter}}" />
                    <ScrollViewer Margin="16" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12"
                                            Padding="12"
                                            Background="{Binding IsFromUser, Converter={StaticResource BoolToBrushConverter}}"
                                            CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Role}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Margin="0,4,0,0" />
                                            <TextBlock Text="{Binding CreatedAt, StringFormat=HH:mm}"
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      HorizontalAlignment="Right" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <Control Grid.ColumnSpan="2"
                Style="{StaticResource LoadingSpinnerStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
