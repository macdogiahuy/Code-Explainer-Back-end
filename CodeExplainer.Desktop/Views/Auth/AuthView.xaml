<UserControl x:Class="CodeExplainer.Desktop.Views.Auth.AuthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:CodeExplainer.Desktop.Helpers"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="{StaticResource SurfaceBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Padding="60" Background="Transparent" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Code Explainer" FontSize="36" FontWeight="Bold" Foreground="{StaticResource BrandPrimaryBrush}" />
                <TextBlock Text="Phân tích mã nguồn, giải thích và nhận gợi ý cải thiện chỉ trong tích tắc." FontSize="16" Width="420" TextWrapping="Wrap" Margin="0,16,0,0" />
                <TextBlock Text="• Chat với AI dựa trên Gemini"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,16,0,0" />
                <TextBlock Text="• Quản lý phiên làm việc và lịch sử"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0" />
                <TextBlock Text="• Nhận thông báo real-time"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Margin="40" Padding="32" Background="White" CornerRadius="16"
                BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{}{" FontSize="32" Foreground="{StaticResource BrandPrimaryBrush}" />
                    <TextBlock Text="Code" FontSize="32" FontWeight="Bold" Margin="8,0,0,0" />
                    <TextBlock Text="Explainer" FontSize="32" Margin="8,0,0,0" />
                    <TextBlock Text="}" FontSize="32" Foreground="{StaticResource BrandPrimaryBrush}" Margin="8,0,0,0" />
                </StackPanel>

                <Grid>
                    <StackPanel Visibility="{Binding IsLoginMode, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,24,0,0">
                        <TextBlock Text="Đăng nhập" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <TextBox Text="{Binding LoginRequest.Email, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <PasswordBox helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding LoginRequest.Password, Mode=TwoWay}" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="Quên mật khẩu?" Command="{Binding ShowForgotPasswordCommand}" />
                        </StackPanel>
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,12,0,0" />
                        <Button Content="Đăng nhập" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding LoginCommand}" Margin="0,12,0,0" />
                        <Button Content="Chưa có tài khoản? Đăng ký"
                                Command="{Binding ToggleModeCommand}" Margin="0,12,0,0" />
                    </StackPanel>

                    <StackPanel Visibility="{Binding IsRegisterMode, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,24,0,0">
                        <TextBlock Text="Tạo tài khoản" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock Text="Tên người dùng" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <TextBox Text="{Binding RegisterRequest.UserName, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <TextBox Text="{Binding RegisterRequest.Email, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <PasswordBox helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding RegisterRequest.Password, Mode=TwoWay}" />
                        <TextBlock Text="Xác nhận mật khẩu" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <PasswordBox helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding RegisterRequest.ConfirmPassword, Mode=TwoWay}" />
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,12,0,0" />
                        <Button Content="Đăng ký" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding RegisterCommand}" Margin="0,12,0,0" />
                        <Button Content="Đã có tài khoản? Đăng nhập"
                                Command="{Binding ToggleModeCommand}" Margin="0,12,0,0" />
                    </StackPanel>

                    <StackPanel Visibility="{Binding IsForgotPasswordMode, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,24,0,0">
                        <TextBlock Text="Quên mật khẩu" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock Text="Nhập email của bạn để nhận liên kết đặt lại mật khẩu" TextWrapping="Wrap" Margin="0,16,0,0" />
                        <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,16,0,4" />
                        <TextBox Text="{Binding ForgotPasswordEmail, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding ForgotPasswordMessage}" Foreground="{StaticResource BrandAccentBrush}" TextWrapping="Wrap" Margin="0,12,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Gửi liên kết" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SubmitForgotPasswordCommand}" />
                            <Button Content="Quay lại" Command="{Binding BackToLoginCommand}" Margin="12,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
