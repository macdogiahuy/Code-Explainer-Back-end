<UserControl x:Class="CodeExplainer.Desktop.Views.Profile.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:CodeExplainer.Desktop.Helpers"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="12"
                Margin="0,0,16,0" Padding="24">
            <StackPanel HorizontalAlignment="Center">
                <Border Width="120" Height="120" CornerRadius="60" Background="#F5F7FA" BorderBrush="{StaticResource SurfaceBorderBrush}"
                        BorderThickness="1" HorizontalAlignment="Center">
                    <Image Source="{Binding ProfilePictureUrl}" Stretch="UniformToFill" />
                </Border>
                <Button Content="Chọn ảnh" Command="{Binding SelectAvatarCommand}" Margin="0,12,0,0" />
                <TextBlock Text="{Binding LocalAvatarPath}" TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="12" Padding="32">
            <StackPanel>
                <TextBlock Text="Thông tin tài khoản" FontSize="20" FontWeight="SemiBold" />
                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="Tên hiển thị" FontWeight="SemiBold" />
                    <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0" />
                </StackPanel>
                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="Email" FontWeight="SemiBold" />
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <StackPanel Width="240">
                        <TextBlock Text="Mật khẩu mới" FontWeight="SemiBold" />
                        <PasswordBox helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" Margin="0,8,0,0" />
                    </StackPanel>
                    <StackPanel Width="240" Margin="12,0,0,0">
                        <TextBlock Text="Xác nhận mật khẩu" FontWeight="SemiBold" />
                        <PasswordBox helpers:PasswordBoxHelper.BindPassword="True"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay}" Margin="0,8,0,0" />
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="{Binding Message}" Foreground="{StaticResource BrandAccentBrush}" TextWrapping="Wrap" Margin="0,16,0,0" />
                <Button Content="Lưu thay đổi" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SaveCommand}" Margin="0,16,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
